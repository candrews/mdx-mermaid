{
    "compilerOptions": {
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["ESNext", "DOM"],
        "module": "ES2020",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "index.d.ts",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}
